{
  "name": "ai-overlay",
  "version": "1.0.0",
  "description": "Local AI assistant overlay - invisible to screen sharing",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "tesseract.js": "5.1.1",
    "screenshot-desktop": "1.15.3"
  },
  "devDependencies": {
    "electron": "34.2.0",
    "electron-builder": "25.1.8"
  },
  "build": {
    "appId": "com.local.ai-overlay",
    "productName": "AI Overlay",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": null
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "asarUnpack": [
      "node_modules/screenshot-desktop/lib/win32"
    ],
    "files": [
      "main.js",
      "preload.js",
      "config.json",
      "services/**/*",
      "renderer/**/*"
    ]
  }
}
